{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "esnext",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"]
}
